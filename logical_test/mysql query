SELECT tb_mahasiswa.`mhs_nama`, tb_mahasiswa_nilai.`mhs_id`, tb_mahasiswa_nilai.`nilai`, tb_mahasiswa_nilai.`mk_id`
FROM tb_mahasiswa
INNER JOIN tb_mahasiswa_nilai ON tb_mahasiswa.`mhs_id`=tb_mahasiswa_nilai.`mhs_id`
WHERE tb_mahasiswa.`mhs_nama` = 'Sari' AND tb_mahasiswa_nilai.`mhs_id` = 4 AND tb_mahasiswa_nilai.`mk_id` = 2;




